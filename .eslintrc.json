{
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": ["eslint:recommended", "eslint-config-prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "camelcase": ["error"],
    "prefer-promise-reject-errors": ["off"],
    "no-unused-vars": "off",
    "require-atomic-updates": "off"
  }
}
